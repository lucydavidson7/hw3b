<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/topLevelLayout"
        android:layout_weight="1">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="7"
        android:background="@color/menu_background">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/angle_text"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textColor="@color/seekbar_label_text"
            android:text="@string/seekbar_label"
            android:layout_weight="3"/>
        <SeekBar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:id="@+id/angle_seekbar"
            android:max="90"
            android:progress="45"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fire_cannon_button"
            android:layout_weight="3"
            android:layout_margin="10dp"
            android:background="@color/button_background"
            android:textColor="@color/button_text"
            android:textSize="20sp"
            android:text="@string/fire_button_text"/>
    </LinearLayout>

</LinearLayout>